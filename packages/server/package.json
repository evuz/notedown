{
  "name": "@notedown/server",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "nodemon",
    "build": "tsc",
    "start:dev": "nodemon dist/index.js"
  },
  "dependencies": {
    "fastify": "^2.15.1",
    "fastify-gql": "^4.0.0",
    "graphql": "^15.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.18",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.24",
    "@types/node": "^14.0.13",
    "dotenv": "^8.2.0",
    "ts-node": "^8.10.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r dotenv/config -r ts-node/register ./src/index.ts",
    "ext": "ts"
  }
}
